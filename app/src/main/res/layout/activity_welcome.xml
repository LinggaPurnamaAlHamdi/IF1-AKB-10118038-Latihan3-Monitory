<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".Welcome"
    android:background="@color/White_three">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/separator1">

        <ImageView
            android:layout_width="303dp"
            android:layout_height="190dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_get_start_timitory" />

        <TextView
            android:id="@+id/txtmonitory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:text="Monitory Membantu Anda"
            android:fontFamily="@font/nunito_bold"
            android:textSize="22sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtmonitory"
            android:text="Mengontrol HP Anak"
            android:textSize="22sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/relativelayout2"
        android:background="@color/cool_grey"/>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mulai"
            android:textColor="@color/black"
            android:background="@drawable/custombtn1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="33dp"
            android:layout_alignParentBottom="true"
            android:onClick="logincode"/>
    </RelativeLayout>
</RelativeLayout>